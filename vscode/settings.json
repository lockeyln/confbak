{
  "files.autoSave": "afterDelay",
  "workbench.iconTheme": "moxer-icons",
  "editor.fontFamily": "Geist Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.fontWeight": "normal",
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.list.smoothScrolling": true,
  "editor.mouseWheelZoom": true,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  // 控制活动代码段是否阻止快速建议
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  // 除了 `Tab` 键以外， `Enter` 键是否同样可以接受建议
  // 这能减少“插入新行”和“接受建议”命令之间的歧义
  "editor.acceptSuggestionOnEnter": "smart",
  // 代码补全列表中，优先选择最近的建议
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.suggest.insertMode": "replace",
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingOvertype": "always",
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.wordWrap": "on",
  "editor.lineHeight": 1.5,
  // 文件夹紧凑模式
  "explorer.compactFolders": true,
  "notebook.compactView": true,
  
  "files.autoGuessEncoding": true,
  "search.searchEditor.singleClickBehaviour": "peekDefinition",
  "terminal.integrated.shellIntegration.suggestEnabled": true,
  "terminal.integrated.stickyScroll.enabled": true,

  "window.density.editorTabHeight": "compact",
  "window.dialogStyle": "custom",
  
  // neovim路径
  "vscode-neovim.neovimExecutablePaths.win32": "D:\\Program Files\\Neovim\\bin\\nvim.exe",
  // neovim配置文件路径
  "vscode-neovim.neovimInitVimPaths.win32": "C:\\Users\\nrnr\\AppData\\Local\\nvim\\init.lua",
  // neovim组合键
  "vscode-neovim.compositeKeys": {
    "jj": {
      "command": "vscode-neovim.escape"
    },
  },

  // python设置
  // "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "python": "set PYTHONIOENCODING=utf8 && python"
  },
  "tabnine.experimentalAutoImports": true,
  "python.defaultInterpreterPath": "C:\\Users\\nrnr\\AppData\\Local\\Programs\\Python\\Python310\\python.exe",
  "editor.language.brackets": [],
  "[python]": {
    "editor.formatOnType": true
  },
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {},
  "settingsSync.ignoredExtensions": [
    "ms-toolsai.jupyter",
    "ms-toolsai.vscode-jupyter-cell-tags",
    "ms-toolsai.jupyter-keymap"
  ],

  "vsicons.dontShowNewVersionMessage": true,
  "workbench.colorTheme": "Monokai Dimmed",


  // vim配置
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "1033",
  "vim.autoSwitchInputMethod.obtainIMCmd": "D:\\im-select\\im-select.exe",
  "vim.autoSwitchInputMethod.switchIMCmd": "D:\\im-select\\im-select.exe {im}",

  "editor.lineNumbers": "relative",
  "vim.useSystemClipboard": true,
  "vim.commandLineModeKeyBindingsNonRecursive": [],
  "vim.operatorPendingModeKeyBindings": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["S"],
      "commands": [":w"]
    },
    {
      "before": ["Q"],
      "commands": [":q"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-n>": false
  },
}
